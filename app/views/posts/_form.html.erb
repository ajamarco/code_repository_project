
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container-fluid">
   <div class="row no-gutter">
      <div class="d-none d-md-flex col-md-2 col-lg-4 bg-image-new"></div>
      <div class="col-md-5 col-lg-6">
         <div class="login d-flex align-items-center py-5">
            <div class="container ">
               <div class="row">
                  <div class="col-md-8 col-md-offset-2">
                     <%= render 'error'%><br>
                     <br>
                     <h1>Create post</h1>
                     <%= form_for @post do |f| %> 
                     <div class="form-group has-error">
                        <label for="slug">Title <span class="require">*</span> <small>(Add a title)</small></label>
                        <%=f.text_field :title, class:"form-control"%>
                     </div>
                     <div class="form-group">
                        <label for="title">Description <span class="require">*</span></label>
                        <%=f.text_field :description, class:"form-control"%>
                     </div>
                     <div class="form-group">
                        <label for="description">Content</label>
                        <%=f.text_area :content, class:"form-control", cols: "30", rows: "10"%>
                     </div>
                     <%= f.label :language %><br>
                     <%= f.collection_select :language_id, @languages, :id, :name %><br>
                     <br>
                     <%= f.fields_for :tags do |tag_form| %>
                     <%= tag_form.label "add tag" %><br>
                     <%= tag_form.text_field :name %>
                     <br/>
                     <% end %>
                     <br>
                     <strong> Choose tags: </strong><br>
                     <br>
                     <%= f.collection_select(:tag_ids, @tags, :id, :name, {:prompt => "All tags "}, {:multiple => true})%><br>
                     <br>
                     <%= button_to "Save post", {controller: 'posts', action: "create", method: :post}, {class: "btn-lg btn-primary btn-login 
                        text-uppercase font-weight-bold mb-2"} %> <br> 
                     <a href="/posts"> <%= button_to "Back to posts", {class: "btn-lg btn-primary btn-login 
                        text-uppercase font-weight-bold mb-2"} %> <br> </a>
                     <%end%>
                  </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
</div>
</div>
