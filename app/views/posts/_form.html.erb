<%= form_for @post do |f|%>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
    <%= f.label :description %><br>
  <%= f.text_field :description %><br>
  <br>
    <%= f.label :content %><br>
  <%= f.text_area :content %><br>
  <br>
   
    <%= f.label :language %><br>
  <%= f.collection_select :language_id, @languages, :id, :name %><br>
  <br>
    <%= f.collection_select(:tag_ids, @tags, :id, :name, {:prompt => "Please Select a tag"}, {:multiple => true}) %>
  <%=f.submit "save new post "%>

<%end%>